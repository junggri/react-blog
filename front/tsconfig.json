{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "compile",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@component/*": [
        "src/component/*"
      ],
      "@useHooks/*": [
        "src/useHooks/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@config/*": [
        "src/config/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}
